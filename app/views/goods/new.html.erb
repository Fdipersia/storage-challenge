<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<div class="container  mb-3">
  <%= simple_form_for @good do |f| %>
    <%= f.error_notification %>

    <%= f.input :consignment_id, label: 'Consignment ID' %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :source %>
    <%= f.input :destination %>
    <%= f.input :entry_at, as: :datetime, label: 'Entry at:' %>
    <%= f.input :exit_at, as: :datetime, label: 'Exit at:' %>
    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: 'btn-outline-secondary' %>
    <%= link_to 'Go Back', goods_path, class: 'btn btn-danger' %>
  <% end %>
</div>
